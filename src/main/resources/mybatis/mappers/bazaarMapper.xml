<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manage.sys.sms.dao.IBazaarMapper">

    <sql id="table_name">TD_BAZAAR</sql>
    <sql id="base_columns">
        id,code,name,description,phone,location,status,manager,sort_number,creator,create_time,updater,update_time
    </sql>
    <sql id="base_columns_without_id">
       code,name,description,phone,location,status,manager,sort_number,creator,create_time,updater,update_time
    </sql>

    <resultMap id="userResultMap" type="com.manage.sys.sms.api.entity.BazaarEntity">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="phone" column="phone"/>
        <result property="location" column="location"/>
        <result property="status" column="status"/>
        <result property="manager" column="manager"/>
        <result property="sortNumber" column="sort_number"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="updater" column="updater"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.manage.sys.sms.api.entity.BazaarEntity">
        INSERT INTO
        <include refid="table_name"/>
        (
        <include refid="base_columns_without_id"/>
        )
        VALUES
        (
         #{code},
         #{name},
         #{description},
         #{phone},
         #{location},
         #{status},
         #{manager},
         #{sortNumber},
         #{creator},
         now(),
         #{updater},
         now()
        )
    </insert>

    <update id="update" parameterType="com.manage.sys.sms.api.entity.BazaarEntity" >
        UPDATE
        <include refid="table_name"/>
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="location != null">
                location = #{location},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="manager != null">
                manager = #{manager},
            </if>
            <if test="sortNumber != null">
                sort_number = #{sortNumber},
            </if>
            <if test="updater != null">
                updater = #{updater},
            </if>
            update_time = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.util.Set">
        DELETE FROM
        <include refid="table_name"/>
        <where>
            id IN
            <foreach collection="ids" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </delete>


    <select id="getById" parameterType="Integer" resultMap="userResultMap">
        SELECT
        <include refid="base_columns"/>
        FROM
        <include refid="table_name"/>
        WHERE id = #{id}
    </select>


    <select id="list" parameterType="com.manage.sys.sms.api.entity.query.QueryParam" resultMap="userResultMap">
        SELECT
        <include refid="base_columns"/>
        FROM
        <include refid="table_name"/>
        <where>
            <if test="id != null">
               AND id = #{id}
            </if>
            <if test="code != null">
                AND code = #{code}
            </if>
            <if test="name != null">
                AND name like CONCAT('%',#{name},'%')
            </if>
            <if test="conditions.location != null">
                AND location like CONCAT('%',#{conditions.location},'%')
            </if>
            <if test="conditions.status != null">
                AND status = #{conditions.status}
            </if>
        </where>
        ORDER BY sort_number DESC
    </select>

</mapper>