<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manage.sys.sms.dao.IStallMapper">

    <sql id="table_name">TD_STALL</sql>
    <sql id="table_user">TM_USER</sql>
    <sql id="table_bazaar">TD_BAZAAR</sql>
    <sql id="base_columns">id,code,name,description,bazaar_id,user_id,size,price,status,date_month,expiration,creator,create_time,updater,update_time</sql>
    <sql id="base_columns_without_id">code,name,description,bazaar_id,user_id,size,price,status,date_month,expiration,creator,create_time,updater,update_time</sql>

    <sql id="show_columns">
        s.id,s.code,s.name,s.description,s.bazaar_id,s.user_id,s.size,s.price,s.status,s.date_month,s.expiration,s.creator,s.create_time,s.updater,s.update_time,
        b.name AS b_name,u.name AS u_name
    </sql>

    <resultMap id="userResultMap" type="com.manage.sys.sms.api.entity.StallEntity">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="bazaarId" column="bazaar_id"/>
        <result property="userId" column="user_id"/>
        <result property="size" column="size"/>
        <result property="price" column="price"/>
        <result property="status" column="status"/>
        <result property="dateMonth" column="date_month"/>
        <result property="expiration" column="expiration"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="updater" column="updater"/>
        <result property="updateTime" column="update_time"/>
        <result property="bazaarName" column="b_name"/>
        <result property="username" column="u_name"/>
    </resultMap>

    <insert id="insert" parameterType="com.manage.sys.sms.api.entity.StallEntity">
        INSERT INTO
        <include refid="table_name"/>
        (
        <include refid="base_columns_without_id"/>
        )
        VALUES
        (
         #{code},
         #{name},
         #{description},
         #{bazaarId},
         #{userId},
         #{size},
         #{price},
         #{status},
         #{dateMonth},
         #{expiration},
         #{creator},
         now(),
         #{updater},
         now()
        )
    </insert>

    <update id="update" parameterType="com.manage.sys.sms.api.entity.StallEntity" >
        UPDATE
        <include refid="table_name"/>
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="bazaarId != null">
                bazaar_id = #{bazaarId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="size != null">
                size = #{size},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="dateMonth != null">
                date_month = #{dateMonth},
            </if>
            <if test="expiration != null">
                expiration = #{expiration},
            </if>
            <if test="updater != null">
                updater = #{updater},
            </if>
            update_time = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.util.Set">
        DELETE FROM
        <include refid="table_name"/>
        <where>
            id IN
            <foreach collection="ids" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </delete>


    <select id="getById" parameterType="Integer" resultMap="userResultMap">
        SELECT
        <include refid="base_columns"/>
        FROM
        <include refid="table_name"/>
        WHERE id = #{id}
    </select>


    <select id="list" parameterType="com.manage.sys.sms.api.entity.query.QueryParam" resultMap="userResultMap">
        SELECT
        <include refid="show_columns"/>
        FROM
        <include refid="table_name"/> AS s
        INNER JOIN <include refid="table_bazaar"/> AS b ON b.id = s.bazaar_id
        LEFT JOIN <include refid="table_user"/> AS u on u.id = s.user_id
        <where>
            <if test="id != null">
               AND s.id = #{id}
            </if>
            <if test="code != null">
                AND s.code = #{code}
            </if>
            <if test="name != null">
                AND s.name like CONCAT('%',#{name},'%')
            </if>
            <if test="conditions.bazaarId != null">
                AND  s.bazaar_id = #{conditions.bazaarId}
            </if>
            <if test="conditions.status != null">
                AND s.status = #{conditions.status}
            </if>
        </where>
    </select>

</mapper>